    <!--====================================-->
    <!--      menu déroulant du filtre      -->
    <!--====================================-->

    <!-- Bouton pour basculer l'affichage des filtres -->
    <button id="toggleButton">Afficher les filtres</button>

    <div id ="filterContainer">
      <div class="dropdown" id="dateDropdown">
          <label for="dateSelect">Date:</label>
          <input type="date" id="dateSelect">
      </div>
  
      <div class="dropdown" id="classDropdown">
          <label for="classSelect">Classe:</label>
          <select id="classSelect">
              <option value="">Sélectionnez une classe</option>
              <option value="te1">TE1</option>
              <option value="se2">SE2</option>
              <option value="ses3">SES3</option>
          </select>
      </div>
  
      <div class="dropdown" id="subjectDropdown">
          <label for="subjectSelect">Matière:</label>
          <select id="subjectSelect">
              <option value="">Sélectionnez une matière</option>
              <option value="algebre">Algèbre</option>
              <option value="biologie">Biologie</option>
              <option value="geographie">Géographie</option>
          </select>
      </div>
        
      <div class="result" id="selectedFilters">
      Sélection : 
      </div>
   </div>

    

    <div class="container"></div>
    <div id="boite_event"></div>


    <a href="/logout">Se deconnecter</a>
    <%- include('footer') %>


